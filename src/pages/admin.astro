---
import AdminLayout from "../layouts/AdminLayout.astro";
import { AuthGuard } from "../components/auth/AuthGuard";
import { DashboardOverview } from "../components/admin/DashboardOverview";
import { HabitConsole } from "../components/admin/HabitConsole";
import { MediaTable } from "../components/admin/MediaTable";
---

<AdminLayout title="管理後台 - 記憶巷弄">
    <AuthGuard client:only="react">
        <div class="space-y-8">
            <!-- Header -->
            <div>
                <h1 class="text-3xl font-bold text-zinc-900 dark:text-white">
                    仪表盘
                </h1>
                <p class="text-zinc-500 dark:text-zinc-400 mt-2">
                    欢迎回来，这里是你的生活控制中心。
                </p>
            </div>

            <!-- Stats Overview -->
            <DashboardOverview client:load />

            <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
                <!-- Habit Console (Left 2/3) -->
                <div class="xl:col-span-2">
                    <HabitConsole client:load />
                </div>

                <!-- Quick Actions / Future Widgets (Right 1/3) -->
                <div
                    class="bg-gradient-to-br from-teal-500 to-cyan-600 rounded-3xl p-8 text-white flex flex-col justify-between h-full min-h-[300px]"
                >
                    <div>
                        <h3 class="text-2xl font-bold mb-2">保持专注</h3>
                        <p class="text-teal-100">
                            "We are what we repeatedly do. Excellence, then, is
                            not an act, but a habit."
                        </p>
                    </div>
                    <div class="text-sm opacity-80">— Aristotle</div>
                </div>
            </div>

            <!-- Media Management -->
            <div>
                <h2
                    class="text-xl font-bold text-zinc-900 dark:text-white mb-6"
                >
                    媒体库管理
                </h2>
                <MediaTable client:only="react" />
            </div>
        </div>
    </AuthGuard>
</AdminLayout>
