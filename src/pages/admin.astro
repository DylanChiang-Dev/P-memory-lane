---
import AdminLayout from "../layouts/AdminLayout.astro";
import { DashboardOverview } from "../components/admin/DashboardOverview";
import { HabitConsole } from "../components/admin/HabitConsole";
---

<AdminLayout title="管理後台 - 記憶巷弄">
    <div class="space-y-8">
        <!-- Stats Overview -->
        <DashboardOverview client:load />

        <!-- Habit Console -->
        <div>
            <h2
                class="text-lg font-semibold text-zinc-900 dark:text-white mb-4 flex items-center gap-2"
            >
                <span class="w-1.5 h-1.5 rounded-full bg-teal-400"></span>
                今日習慣
            </h2>
            <HabitConsole client:load />
        </div>
    </div>
</AdminLayout>
