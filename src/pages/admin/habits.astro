---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { HabitConsole } from "../../components/admin/HabitConsole";
import { HabitTracker } from "../../components/habits/HabitTracker";

const currentYear = new Date().getFullYear();
---

<AdminLayout title="習慣管理 - 管理後台">
    <div class="space-y-8">
        <div>
            <h1 class="text-3xl font-bold text-zinc-900 dark:text-white">
                習慣管理
            </h1>
            <p class="text-zinc-500 dark:text-zinc-400 mt-2">
                記錄每日進度，查看長期趨勢。
            </p>
        </div>

        <!-- Check-in Console -->
        <HabitConsole client:load />

        <!-- Visualization -->
        <div
            class="bg-white dark:bg-zinc-900/50 border border-zinc-200 dark:border-white/5 rounded-3xl p-6 md:p-8"
        >
            <h2 class="text-xl font-bold text-zinc-900 dark:text-white mb-6">
                數據概覽
            </h2>
            <HabitTracker initialYear={currentYear} client:load />
        </div>
    </div>
</AdminLayout>
