---
import "../styles/global.css";
import { ToastContainer } from "../components/ui/Toast";
import { AuthGuard } from "../components/auth/AuthGuard";
import { TopNav } from "../components/admin/layout/TopNav";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script is:inline>
            if (
                localStorage.theme === "dark" ||
                (!("theme" in localStorage) &&
                    window.matchMedia("(prefers-color-scheme: dark)").matches)
            ) {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        </script>
    </head>
    <body class="min-h-screen bg-zinc-50 dark:bg-zinc-950">
        <AuthGuard client:only="react">
            <TopNav client:load currentPath={Astro.url.pathname} />
            <main id="admin-main" class="min-h-screen">
                <div class="p-6 md:p-10 max-w-7xl mx-auto space-y-8">
                    <slot />
                </div>
            </main>
        </AuthGuard>
        <ToastContainer client:load />
    </body>
</html>
