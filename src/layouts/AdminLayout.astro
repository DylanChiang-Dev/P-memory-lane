    >
        <!-- Sidebar -->
        <aside
            id="admin-sidebar"
            class="admin-sidebar fixed inset-y-0 left-0 w-64 bg-white dark:bg-zinc-900 border-r border-zinc-200 dark:border-white/5 hidden md:flex flex-col z-50"
        >
