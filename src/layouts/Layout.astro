---
import "../styles/global.css";
import { Header } from "../components/layout/Header";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Personal Media Library & Habit Tracker"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			// Initialize theme immediately to prevent flash
			if (
				localStorage.theme === "dark" ||
				(!("theme" in localStorage) &&
					window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>
	</head>
	<body
		class="min-h-screen flex flex-col bg-zinc-50 dark:bg-zinc-950 transition-colors duration-300"
	>
		<Header client:only="react" />

		<main
			class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-16"
		>
			<slot />
		</main>

		<footer
			class="py-8 text-center text-sm text-zinc-600 border-t border-white/5"
		>
			<p>
				&copy; {new Date().getFullYear()} Memory Lane. ç”¨å¿ƒæ‰“é€  ðŸ–¤
			</p>
		</footer>
	</body>
</html>
